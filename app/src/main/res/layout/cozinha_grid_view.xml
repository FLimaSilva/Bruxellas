<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLayoutCoz"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_weight="1"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textCzMesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mesa 02"
        android:textColor="@color/Color_Text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textCzData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCzData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="20/08/18 - 14:55"
        android:textColor="@color/Color_Text"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textCzMesa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textCzMesa" />

    <TextView
        android:id="@+id/textCzPedido"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:text="Qt: 2 - Bruxellas\nAd: Leite condensado\nAd: Açaí\nRe: Chocolate"
        android:textColor="@color/Color_Text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCzMesa" />

    <TextView
        android:id="@+id/textColor"
        android:layout_width="8dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textColor2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textColor2"
        android:layout_width="8dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textColor" />
</android.support.constraint.ConstraintLayout>
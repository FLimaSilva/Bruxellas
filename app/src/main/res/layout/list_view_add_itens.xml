<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:layout_margin="4dp"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Qt."
            android:textColor="@color/Color_Text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textQuant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.62"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textQuant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center_horizontal"
            android:text="10"
            android:textSize="16sp"
            android:textColor="@color/Color_Text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="260dp"
        android:layout_height="67dp"
        android:orientation="vertical"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">

        <TextView
            android:id="@+id/textPrNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Frango com requeijÃ£o"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Color_Text"
            app:layout_constraintBottom_toTopOf="@+id/textAdNomes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textAdNomes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Adicional:"
            android:textSize="16sp"
            android:textColor="@color/Color_Text"
            app:layout_constraintBottom_toTopOf="@+id/textReNomes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textPrNome" />

        <TextView
            android:id="@+id/textReNomes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Retirar:"
            android:textSize="16sp"
            android:textColor="@color/Color_Text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textAdNomes" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textPrecoTotPr"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:text="R$ 30,00"
        android:textColor="@color/Color_Text"
        android:textSize="15sp" />

</LinearLayout>